{
  "name": "metapress",
  "version": "0.1.3",
  "private": true,
  "author": "dhruvjangid",
  "description": "The Pulse of Creativity",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "docker": "turbo docker -F web",
    "clean": "rm -rf apps/web/.output apps/web/.turbo apps/web/node_modules apps/web/.tanstack apps/web/.vercel bun.lock .turbo node_modules",
    "in": "bun i && bun update --latest && turbo in -F web"
  },
  "devDependencies": {
    "turbo": "^2.7.5",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2"
  }
}
